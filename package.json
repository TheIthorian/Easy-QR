{
    "devDependencies": {
        "@babel/preset-env": "^7.16.11",
        "@types/jest": "^27.0.1",
        "@types/node": "^18.7.3",
        "babel-jest": "^28.1.3",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^28.1.3",
        "jest-canvas-mock": "^2.4.0",
        "jest-environment-jsdom": "^28.1.3",
        "jsdoc": "^3.6.10",
        "rimraf": "^3.0.2",
        "ts-jest": "^28.0.7",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.7.4"
    },
    "scripts": {
        "test": "jest",
        "testall": "jest --all && npm run coverage",
        "rimraf": "./node_modules/rimraf/bin.js",
        "clean-build": "rimraf ./build/",
        "clean-dist": "rimraf ./dist/",
        "build": "npm run clean-build && tsc --project tsconfig.json ",
        "build-dist": "npm run clean-dist && tsc --project tsconfig.build.json",
        "start": "http-server .",
        "deploy": "npm run build-dist && http-server .",
        "coverage": "start ./coverage/lcov-report/index.html"
    }
}
